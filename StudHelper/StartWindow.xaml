                    <Label Content="Пользователи" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="Users_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,77,0,0" TextWrapping="Wrap" Text="users" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>
                    <Label Content="Таблицы" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="10,40,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="18" Width="385" Height="32"/>

                    <Label Content="События" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="events_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,105,0,0" TextWrapping="Wrap" Text="Events" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Группы" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="Groups_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,133,0,0" TextWrapping="Wrap" Text="Groups" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Курсы лекций" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="Courses_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,161,0,0" TextWrapping="Wrap" Text="Courses" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Права доступа" HorizontalAlignment="Left" Margin="10,189,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="rights_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,189,0,0" TextWrapping="Wrap" Text="Rights" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Лекции" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="Lessons_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,217,0,0" TextWrapping="Wrap" Text="lessons" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Пользователи курса" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="Lessons_users_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,245,0,0" TextWrapping="Wrap" Text="course_users" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Словарь" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="Dictionary_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,273,0,0" TextWrapping="Wrap" Text="Dictionary" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

                    <Label Content="Избранное слов." HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
                    <TextBox x:Name="dictionary_fav_table_TB" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="23" Margin="133,301,0,0" TextWrapping="Wrap" Text="Dictionary_fav" VerticalAlignment="Top" Width="262" Foreground="#7FFFFFFF" FontSize="11" MinHeight="23"/>

