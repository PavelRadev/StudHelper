                    <Button x:Name="LoadSettings" Content="Загрузить настройки из файла" HorizontalAlignment="Left" Foreground="#7FFFFFFF" Margin="10,338,0,0" VerticalAlignment="Top" Width="241" FontSize="8" Click="LoadSettings_Click"/>
                    <CheckBox x:Name="DefaultSettings" Content="Использовать по умолчанию" Foreground="#7FFFFFFF" HorizontalAlignment="Left" Margin="209,368,0,0" VerticalAlignment="Top" Width="186"/>
                    <CheckBox x:Name="SaveInFile" Content="Сохранить открытый файл" Foreground="#7FFFFFFF" HorizontalAlignment="Left" Margin="10,368,0,0" VerticalAlignment="Top" Width="194"/>


                </Grid>
            </TabItem>
            <TabItem Header="Вход" IsSelected="True">
                <Grid>
                    <Grid HorizontalAlignment="Center" Height="274" VerticalAlignment="Center" Width="381">
                        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Width="110" FontSize="14" Foreground="#7FFFFFFF"/>
                        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#00000000" FontSize="14" Foreground="#7FFFFFFF"/>
                        <TextBox Controls:TextBoxHelper.ClearTextButton="True" x:Name="LoginTextBox" HorizontalAlignment="Left" Height="29" Margin="170,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="14" TextChanged="LoginTextBox_TextChanged"/>
