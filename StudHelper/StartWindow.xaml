                <Grid Margin="0,0,0,0">
                    <Label Content="Строка подключения" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#7FFFFFFF" FontSize="11" Height="23"/>
