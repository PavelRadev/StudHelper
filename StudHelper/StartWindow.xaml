                        <Label x:Name="CodeLabel" Content="Введите код доступа" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#7FFFFFFF"/>
                        <TextBox Controls:TextBoxHelper.ClearTextButton="True" x:Name="RegAccessTb" HorizontalAlignment="Left" Height="28" Margin="172,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" FontSize="14" TextChanged="RegAccessTb_TextChanged"/>
                        <Label Content="Ваше имя" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="123" FontSize="14" Foreground="#7FFFFFFF"/>
                        <TextBox Controls:TextBoxHelper.ClearTextButton="True" x:Name="RegNameTb" HorizontalAlignment="Left" Height="28" Margin="172,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" FontSize="14"/>
                        <Label Content="Группа" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="123" FontSize="14" Foreground="#7FFFFFFF"/>
                        <ComboBox x:Name="GroupCB" HorizontalAlignment="Left" Margin="172,114,0,0" VerticalAlignment="Top" Width="203" Height="28" FontSize="14" SelectionChanged="GroupCB_SelectionChanged"/>
                        <Label Content="Учебное заведение" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#7FFFFFFF"/>
                        <TextBox Controls:TextBoxHelper.ClearTextButton="True" x:Name="StTb" HorizontalAlignment="Left" Height="28" Margin="172,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" FontSize="14" IsReadOnly="True"/>
                        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,232,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#7FFFFFFF"/>
                        <TextBox Controls:TextBoxHelper.ClearTextButton="True" x:Name="RegLoginTb" HorizontalAlignment="Left" Height="28" Margin="172,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" FontSize="14" TextChanged="RegLoginTb_TextChanged"/>
                        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,278,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#7FFFFFFF"/>
                        <TextBox Controls:TextBoxHelper.ClearTextButton="True" x:Name="RegPassTb" HorizontalAlignment="Left" Height="28" Margin="172,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" FontSize="14"/>
                        <Button x:Name="CheckButton" Content="Проверка" HorizontalAlignment="Center" Margin="314,306,10,0" VerticalAlignment="Top" Width="61" FontSize="9" Click="CheckButton_Click" Foreground="#7FFFFFFF"/>
