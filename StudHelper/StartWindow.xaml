        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local ="clr-namespace:StudHelper"
                      
        BorderThickness="0" 
        GlowBrush="Black"
        WindowTransitionsEnabled="False"
        WindowStartupLocation="CenterScreen"
        ShowTitleBar="False"              
        Title="StartWindow" Height="500" Width="417" ResizeMode="NoResize" Background="#FF252525">
    <Grid Margin="0,0,0,0">
        <TabControl HorizontalAlignment="Left" Height="471" VerticalAlignment="Top" Width="411" Margin="0,0,0,0">
